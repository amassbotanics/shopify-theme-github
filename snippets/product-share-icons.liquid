{% comment %}
@param share_canonical_url {String}
  Product or article URL to share

@param email_subject {String}
  Share-by-email subject line

@param email_body {String}
  Share-by-email content

@param image {URL}
  Image associated with the item to be displayed on social media

@param description {String}
  Item description or summary to be shared on social media
{% endcomment %}

<ul class="product-share-icon__wrap">
    <li class="product-share-icon__item">
      <a
      class=""
      href="http://twitter.com/share?url={{ share_canonical_url | url_encode }}">
      {% render 'icon' with 'share-twitter' %}
      </a>
    </li>
    <li class="product-share-icon__item">
      <a
      class=""
      href="http://www.facebook.com/sharer.php?u={{ share_canonical_url | url_encode }}" >
      {% render 'icon' with 'share-facebook' %}
      </a>
    </li>
    <li class="product-share-icon__item">
      <a
      class=""
      href="http://pinterest.com/pin/create/button/?url={{ canonical_url | url_encode }}&amp;media=http:{{ image }}&amp;description={{ description }}"
      data-pin-do="buttonPin"
      data-pin-custom="true">
      {% render 'icon' with 'share-pinterest' %}
      </a>
    </li>
    <li class="product-share-icon__item">
      <a
      class=""
      href="mailto:?Subject={{ email_subject | escape }}&Body={{ email_body | escape }}">
      {% render 'icon' with 'share-email' %}
    </a>

    </li>
</ul>
  